{
  "manifest_version": 3,
  "name": "Sans-Serif Font Changer",
  "version": "1.0",
  "description": "Automatically changes font to sans-serif.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.frontendmentor.io/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
